<MainGrid>:
    couriers: couriers_id
    vehicles: vehicles_id
    packages: packages_id
    solutions: solutions_id
    attempts: attempts_id
    iterations: iterations_id

    GridLayout:
        cols: 1
        padding: 20
        spacing: 20
        size: root.width, root.height

        Label:
            text: "Delivery Optimizer Settings"
            font_size: '24sp'
            bold: True
            size_hint_y: None
            height: 50
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        GridLayout:
            cols: 2
            spacing: 10
            row_default_height: 40
            row_force_default: True

            Label:
                text: "Couriers:"
                font_size: '16sp'
                halign: 'right'
                valign: 'middle'
                text_size: self.size
            TextInput:
                id: couriers_id
                multiline: False
                hint_text: "Enter number of couriers"

            Label:
                text: "Vehicles:"
                font_size: '16sp'
                halign: 'right'
                valign: 'middle'
                text_size: self.size
            TextInput:
                id: vehicles_id
                multiline: False
                hint_text: "Enter number of vehicles"

            Label:
                text: "Packages:"
                font_size: '16sp'
                halign: 'right'
                valign: 'middle'
                text_size: self.size
            TextInput:
                id: packages_id
                multiline: False
                hint_text: "Enter number of packages"

            Label:
                text: "Solutions to find:"
                font_size: '16sp'
                halign: 'right'
                valign: 'middle'
                text_size: self.size
            TextInput:
                id: solutions_id
                multiline: False
                hint_text: "e.g. 5"

            Label:
                text: "Max attempts:"
                font_size: '16sp'
                halign: 'right'
                valign: 'middle'
                text_size: self.size
            TextInput:
                id: attempts_id
                multiline: False
                hint_text: "e.g. 1000"

            Label:
                text: "Max iterations:"
                font_size: '16sp'
                halign: 'right'
                valign: 'middle'
                text_size: self.size
            TextInput:
                id: iterations_id
                multiline: False
                hint_text: "e.g. 500"

        Button:
            text: "Generate"
            font_size: '18sp'
            size_hint: (None, None)
            size: (200, 50)
            pos_hint: {"center_x": 0.5}
            background_color: (0.2, 0.6, 0.9, 1)
            color: (1, 1, 1, 1)
            on_press: root.generate()
